rules_version = '2';

// Firebase Storage security rules for EcoVibeFloors
// Product images are publicly readable, but uploads are restricted
service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for product images
    // Anyone can view product images for the website
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only backend/admin can upload
    }

    // Block all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
